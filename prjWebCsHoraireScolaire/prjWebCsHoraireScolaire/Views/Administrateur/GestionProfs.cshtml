@model IEnumerable<prjWebCsHoraireScolaire.Models.Professeur>

@{
    ViewBag.Title = "GestionProfs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Gestion des professeurs</h2>

<p>
    @Html.ActionLink("Nouveau Professeur", "AjouterProfesseur")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
      
        <td>
            @*@Html.ActionLink("Edit", "ModifierProfesseur", new { id=item.Id }) |
            @Html.ActionLink("Details", "Professeur", new { id=item.Id }) |*@
            @Html.ActionLink("Efacer", "EffacerProfesseur", new { id=item.Id })
        </td>
    </tr>
}

</table>
